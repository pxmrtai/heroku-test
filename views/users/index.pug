extends ../layouts/common 
block headContent
block navbar

  h1 User List

  table.table
    tr
      th avatar
      th Name
      th ID
      th Action
    each user in userList
      tr
        td
          if user.avatar
            img(src='/' + user.avatar)
          else 
            img(src='https://cdn.glitch.com/77a339e2-d309-4888-9ac3-0ba94f1022ea%2Fdepositphotos_166074422-stock-illustration-default-avatar-profile-icon-grey.jpg?v=1601794635784', )
        td= user.name
        td= user.id
        td= user.password
        td= user.email
        td= user.isAdmin
        td
          a(href="/users/" + user.id) view 
        td
          a(href="/users/index/" + user.id+"/delete") delete
  .nav(aria-label="Page navigation example")
      - var previous = page - 1
      - var next = page + 1
      - var window = 5
      - var maxleft = (page - Math.floor(window / 2))
      - var maxRight = (page + Math.floor(window / 2))
      
      if(maxleft < 1) 
        - maxleft = 1
        - maxRight = window
      
      if(maxRight > maxPage)
        - maxleft = (maxPage - (window - 1))
        - maxRight = maxPage
        if(maxleft < 1) 
          - maxleft = 1
          
      ul.pagination.justify-content-center
        - var currPage = maxleft
        if(page > 1)
          li.page-item
            a.page-link(href='/users/index?page='+ previous) <<
        while currPage <= maxRight
          li.page-item
            a.page-link(href='/users/index?page='+ currPage)= currPage
            - currPage = currPage + 1 
        if(next <= maxPage)
          li.page-item
            a.page-link(href='/users/index?page='+ next) >>


  a(href="/" class="btn btn-primary" role="button") Menu List
  