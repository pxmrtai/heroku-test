extends ../layouts/common 
block headContent
block navbar

  h1 User List
  div current page: #{currPage}
  div max page: #{maxPage}

  table.table
    tr
      th Name
      th ID
      th Action
    each user in userList
      tr
        td= user.name
        td= user.id
        td= user.password
        td= user.email
        td= user.isAdmin
        td
          a(href="/users/" + user.id) view 
        td
          a(href="/users/index/" + user.id+"/delete") delete
  .nav(aria-label="Page navigation example")
      ul.pagination.justify-content-center

        if(currPage > 1)
          li.page-item
            a.page-link(href='/users/index?page='+ --currPage) <<
        if(currPage + 1 < maxPage)
          li.page-item
            a.page-link(href='/users/index?page='+ ++currPage) >>


  a(href="/" class="btn btn-primary" role="button") Menu List
