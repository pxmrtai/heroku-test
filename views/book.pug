extends ./layouts/common 
block headContent
 
  h1 book list

  each book in list
          ul
            li(style="display:inline")
             span Title:&nbsp
             = book.title +   "    /"
             span &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp 
            li(style="display:inline")
             span ID:&nbsp
             = book.id
             br
             div(style="display:inline") &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp 
            a(href="/" + book.id + "/delete") delete
            span &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp 
            a(href="/" + book.id) view
            
              
            
          
            
  h2 Create Book
  form(action="/" method="POST")
        div
          input(type="text" name="title" required="required")
          label(for="tittle") Title
        div 
          input(type="text" name="description" required="required")
          label(for="tittle") Description
        div  
        button(type="submit") Create
  h2 Update Title
  form(action="/update" method="POST")
        div
          input(type="text" name="id" required="required")
          label(for="update") ID
        div 
          input(type="text" name="title" required="required")
          label(for="update") New Title
        div  
        button(type="submit") Update
        

  a(href="/" class="btn btn-primary" role="button") Menu List

    