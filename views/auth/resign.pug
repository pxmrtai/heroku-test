extends ../layouts/common 
block headContent
block navbar
  h1 sign in
  if errors
    each error in errors
        .alert.alert-danger= error
  form.mt-4(action="/auth/resign", method="POST",enctype="multipart/form-data")
     .from-group
        
        div
          label(for="nameUser") Name
          input#nameUser.form-control(type="text",name='name',required)
        div
          label(for="email") email
          input#email.form-control(type="email",name='email',required)
        div
          label(for="password") password
          input.form-control(type="password",name='password',required) 
        div
          label(for="avatar") avatar
          input#avatar.form-control-file(type="file",name='avatar',required) 
        
        div.mt-3
          button.btn.btn-primary.ml-4 make
          